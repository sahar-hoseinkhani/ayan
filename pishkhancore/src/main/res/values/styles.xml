<resources>

    <style name="pishkhanCoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/PishkhanCoreTheme_ColorAccent</item>
        <item name="colorPrimaryDark">@color/PishkhanCoreTheme_ColorPrimaryDark</item>
        <item name="colorPrimary">@color/PishkhanCoreTheme_ColorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AyanDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AyanAppButton">
        <item name="android:textColor">@color/AyanAppButton_TextColor</item>
        <item name="android:textSize">@dimen/adButtonTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">@dimen/ayanHalfPadding</item>
        <item name="android:paddingRight">@dimen/ayanHalfPadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">@dimen/ayanDoubleMainPadding</item>
        <item name="android:background">@drawable/back_ayan_color_accent_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AyanAppButton.Outline" parent="AyanAppButton">
        <item name="android:textColor">@color/AyanAppButtonOutline_TextColor</item>
        <item name="android:textSize">@dimen/adButtonTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">@dimen/ayanHalfPadding</item>
        <item name="android:paddingRight">@dimen/ayanHalfPadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">@dimen/ayanDoubleMainPadding</item>
        <item name="android:background">@drawable/back_ayan_color_accent_outline_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="MarketRatingButton" parent="AyanAppButton" />

    <style name="MarketRatingButton.Outline" parent="AyanAppButton.Outline" />

    <style name="AyanRedAppButton" parent="AyanAppButton">
        <item name="android:background">@drawable/back_ayan_red_button</item>
    </style>

    <style name="AyanGreenAppButton" parent="AyanAppButton">
        <item name="android:background">@drawable/back_ayan_green_button</item>
    </style>

    <style name="AyanAppEditText">
        <item name="android:textColor">@color/AyanAppEditText_TextColor</item>
        <item name="android:textColorHint">@color/AyanAppEditText_TextColorHint</item>
        <item name="android:minHeight">@dimen/ayanButton</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/back_ayan_edit_text</item>
    </style>

    <style name="AyanCardView">
        <item name="cardBackgroundColor">@color/ayanCardViewBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/ayanMainRadius</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/back_bottom_sheet</item>
    </style>

