<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RowRule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rulesTitleTv"
        style="@style/RowRule.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ayanRclPadding"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceBody1"
        android:textStyle="bold"
        tools:text="قوانین و مقررات" />

    <TextView
        android:id="@+id/rulesDescriptionTv"
        style="@style/RowRule.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ayanHalfPadding"
        android:justificationMode="inter_word"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceBody1"
        tools:text="توضیحات" />

</LinearLayout>