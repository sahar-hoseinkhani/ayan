<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/main_padding"
    android:paddingStart="@dimen/main_padding">

    <com.adivery.sdk.AdiveryNativeAdMediaView
        android:id="@+id/adivery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ayanCardPadding">

        <ImageView
            android:id="@id/adivery_icon"
            android:layout_width="@dimen/ayanDoubleMainPadding"
            android:layout_height="@dimen/ayanDoubleMainPadding"
            android:layout_margin="@dimen/ayanCardPadding" />

        <TextView
            android:id="@+id/adivery_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ayanCardPadding"
            android:layout_weight="1"
            android:textColor="@color/ayanTextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adivery_call_to_action"
            style="@style/AyanAppButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ayanButton"
            android:layout_marginTop="@dimen/ayanCardPadding"
            android:layout_marginStart="@dimen/ayanCardPadding"
            android:layout_marginBottom="@dimen/ayanCardPadding" />

    </LinearLayout>

</LinearLayout>