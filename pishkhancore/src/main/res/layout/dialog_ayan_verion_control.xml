<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DialogAyanVersionControl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainContentLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ayanMainPadding">

        <TextView
            android:id="@+id/titleTv"
            style="@style/DialogAyanVersionControl.TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="تیتر" />

        <TextView
            android:id="@+id/messageTv"
            style="@style/DialogAyanVersionControl.TextView.Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayanMainPadding"
            tools:text="توضیحات" />

        <TextView
            android:id="@+id/changeLogTv"
            style="@style/DialogAyanVersionControl.TextView.ChangeLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayanHalfPadding"
            tools:text="لاگ" />

        <TextView
            android:id="@+id/progressTv"
            style="@style/DialogAyanVersionControl.TextView.Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayanMainPadding"
            android:text="%0"
            android:visibility="gone"
            tools:text="درصد" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ayanCardPadding"
            android:max="100"
            android:progressDrawable="@drawable/progress"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/positiveTv"
                style="@style/DialogAyanVersionControl.TextView.Positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ayanMainPadding"
                android:textSize="16sp"
                tools:text="بله" />

            <TextView
                android:id="@+id/negativeTv"
                style="@style/DialogAyanVersionControl.TextView.Negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="خیر" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>