<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ayanColorWhite">

    <LinearLayout
        android:id="@+id/mainContentLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ayanMainPadding">

        <TextView
            android:id="@+id/titleTv"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ayanColorAccent" />

        <TextView
            android:id="@+id/messageTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayanMainPadding"
            android:textColor="@color/ayanTextColor" />

        <TextView
            android:id="@+id/changeLogTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayanHalfPadding"
            android:textColor="@color/ayanTextColor" />

        <TextView
            android:id="@+id/progressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ayanMainPadding"
            android:text="%0"
            android:textColor="@color/ayanColorAccent"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ayanCardPadding"
            android:max="100"
            android:progressDrawable="@drawable/progress"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/negativeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ayanColorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/positiveTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ayanMainPadding"
                android:textColor="@color/ayanColorAccent"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>